{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "target": "es2022",
        "allowJs": false,
        "checkJs": false,
        "esModuleInterop": true,
        "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo"
    },
    "include": [
        "src/**/*.ts",
        "src/devtools/.generated"
    ],
    "exclude": ["src/shims"]
}